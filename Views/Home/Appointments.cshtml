@{ ViewData["Title"] = "Appointments"; }

@model List<Appointment>

<table class="table table-bordered table-striped table-hover table-dark">

    <thead class="font-weight-bold">
        <tr>
            <td>Date</td>
            <td>Time</td>
            <td>Group Name</td>
            <td>Group Size</td>
            <td>Email</td>
            <td>Phone Number</td>

        </tr>
    </thead>

    <tbody>
        <!--fill the table-->
        @foreach (var item in Model)
        {
            @if (item.Available == false)
            { 
                <tr>
                    <td>@item.Date</td>
                    <td>@item.Time</td>
                    <td>@item.GroupName</td>
                    <td>@item.GroupSize</td>
                    <td>@item.Email</td>
                    <td>@item.PhoneNumber</td>


                    <td><a class="btn btn-outline-info" asp-controller="Home" asp-action="Edit" asp-route-appid="@item.AppointmentId">Edit</a></td>
                    <td><a class="btn btn-outline-danger" asp-controller="Home" asp-action="Delete" asp-route-appid="@item.AppointmentId">Delete</a></td>
                </tr>
            }
        }
    </tbody>

</table>